@page
@model RazorPagesMovie.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="LoginInput.Username" class="control-label"></label>
                <input asp-for="LoginInput.Username" class="form-control" />
                <span asp-validation-for="LoginInput.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginInput.Password" class="control-label"></label>
                <input asp-for="LoginInput.Password" class="form-control" />
                <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
        @if (Model.ErrorMessage != null)
        {
            <div class="text-danger text-center mt-3">@Model.ErrorMessage</div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}